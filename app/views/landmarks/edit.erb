<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">

  <input type="hidden" id="hidden" name="_method" value="patch">


  <label>Name:</label>
  <br>
  <input type="text" name="landmark[name]" id="name"
  value="<%= @landmark.name %>">

  <br>
  <br>

  <label>Figure</label>
  <br>
  <% @figures.each do |figure| %>
    <input type="checkbox" name="landmark[figure_id]" id="figure_<%= figure.id %>"
    value="<%= figure.id %>" <%='checked' if @landmark.figure == figure %>>
    <%= figure.name %> </input>
  <% end %>

  <br>
  <br>

  <label>Year Comleted</label>
  <br>
  <input type="text" name="landmark[year_completed]" id="year_completed"
  value="<%= @landmark.year_completed %>">

  <br>
  <br>

  <input type="submit" value="Edit Landmark">

</form>

<br>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
