<h2>All Historical Landmarks</h2>
<br>

<% @landmarks.each do |landmark| %>
  <h3><%= landmark.name %></h3>
  <% unless landmark.figure.nil? %>
    <p>Figure: <%= landmark.figure.name %></p>
    <% end %>
  <p>Year Completed: <%= landmark.year_completed %></p>
  <br>
<% end %>

<a class="button" href="/figures">Figures</a>
